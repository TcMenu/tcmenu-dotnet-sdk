<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="embedControl.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:embedControl"
    xmlns:views="clr-namespace:embedControl.Views" Shell.FlyoutBehavior="{Binding FlyoutMode}">

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Image Source="embed_control_logo.png" HeightRequest="200" />
            <Label Text="Embed Control" FontSize="24" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:GlobalSettingsPage}" Route="GlobalSettingsPage" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Greenhouse 1">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:TcMenuConnectionPage}" Route="TcMenuConnectionPage" />
        </Tab>
    </FlyoutItem>
</Shell>
