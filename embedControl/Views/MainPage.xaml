<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="embedControl.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="embed_control_logo.png"
                SemanticProperties.Description="Embed Control Logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="{Binding AppTitle}"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />

            <Label
                Text="Embedded Application Control"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Visit the Online Help"
                Clicked="OnOnlineHelp"
                HorizontalOptions="Center" />

            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
