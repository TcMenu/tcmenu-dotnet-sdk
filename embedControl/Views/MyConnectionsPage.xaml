<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="embedControl.Views.MyConnectionsPage"
             Title="My Connections">
    <VerticalStackLayout>
        <Label Text="Recent Connections" FontAttributes="Bold" FontSize="18"/>
        <ListView ItemsSource="{Binding RecentConnections}" ItemSelected="NavigateSelectedItem">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding ConnectionName}"
                              Detail="{Binding ConnectionDescription}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label Text="Available Connections" FontAttributes="Bold" FontSize="18" Margin="0,15,0,0"/>
        <ListView ItemsSource="{Binding AllConnections}"  ItemSelected="NavigateSelectedItem">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding ConnectionName}"
                              Detail="{Binding ConnectionDescription}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>